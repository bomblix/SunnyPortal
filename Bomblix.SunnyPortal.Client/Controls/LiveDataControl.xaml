<UserControl x:Class="Bomblix.SunnyPortal.Client.Controls.LiveDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bomblix.SunnyPortal.Client.Controls"
             mc:Ignorable="d" 
             DataContext="{Binding Source={StaticResource Locator}, Path=LiveData}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Content="{Binding CurrentPower}" FontSize="50" />
    </Grid>
</UserControl>
